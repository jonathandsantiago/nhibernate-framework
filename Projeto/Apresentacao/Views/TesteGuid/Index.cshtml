@using ApresentacaoFramework.Models.Helpers.Testes
@using Apresentacao.Models.Helpers

@model IEnumerable<Dominio.ViewMode.TesteGuidViewModel>
@{
    var viewName = "Teste";
    var actionName = "TesteGuid";
    var controllerName = "Create";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="ibox-title">
                        <h5>@viewName</h5>
                        <div class="ibox-tools">
                            <a href="@Url.Action(controllerName, actionName)" class="btn btn-primary btn-xs">Cadastrar @viewName</a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="m-b-lg">
                            <div class="input-group">
                                <input type="text" class=" form-control">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-white"> Consultar</button>
                                </span>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="10">
                                <thead>
                                    <tr>
                                        @Html.GetHtmlHeaderModel()
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            @Html.CommonDisplayFor(modelItem => item.Id)
                                            @Html.CommonDisplayFor(modelItem => item.Nome)
                                            @Html.CommonActionButtons(route: item.Id)
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="6">
                                            <ul class="pagination pull-right"></ul>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/footable/css/footable.core.min.css" />
    </environment>
}
@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/footable/dist/footable.all.min.js"></script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function () {

            $('.footable').footable();

        });</script>
}