@using ApresentacaoFramework.Models.Helpers.Testes

@model Dominio.ViewMode.TesteGuidViewModel
@{
    var viewName = "Detalhe teste";
    var controllerName = "TesteGuid";
}

@using (Html.BeginForm(FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="ibox-title">
                            <h5>@viewName</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="m-b-lg">
                                <div class="input-group">
                                    <fieldset>
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.GetHtmlFildsModel(editable: false)
                                    </fieldset>
                                    <div>
                                        <div class='hr-line-dashed'></div>
                                        <a href="@Url.Action("Index", controllerName)" class="btn btn-white">Voltar </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}