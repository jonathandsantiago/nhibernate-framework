@using ApresentacaoFramework.Models.Helpers.Testes

@model Dominio.ViewMode.TesteViewModel
@{
    var viewName = "Cadastro teste";
    var controllerName = "Teste";
}
@using (Html.BeginForm(FormMethod.Post, new { @class = "form-horizontal", @id = "MyForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="ibox-title">
                            <h5>@viewName</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="m-b-lg">
                                <div class="input-group">
                                    <fieldset>
                                        <div class="editor-field">
                                            @Html.GetHtmlFildsModel()
                                        </div>
                                    </fieldset>
                                    <div>
                                        <div class='hr-line-dashed'></div>
                                        <button class='btn btn-primary' type='submit'>Salvar</button>
                                        <a href="@Url.Action("Index", controllerName)" class="btn btn-white">Voltar </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}